
# extend default config

include /etc/sway/config.d/*

### Variables
#
# Logo key. Use Mod1 for Alt.

set $bg ~/.local/share/backgrounds/astronaut-nord.png
set $/lockbg ~/.local/share/backgrounds/cliff-edge.jpg
set $powermenu ~/.config/wofi/power_menu/wofi_powermenu.fish
set $opacity 0.95
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

set $term alacritty
set $menu wofi
set $browser zen-browser
set $code zeditor

output eDP-1 {
	mode 2880x1800@90Hz
	scale 2
	background $bg fill
}

input "1739:52804:SYNACE44:00_06CB:CE44_Touchpad" {
	tap enabled
	dwt enabled
	natural_scroll enabled
}

input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_options caps:swapescape
}

bindgesture swipe:right workspace prev
bindgesture swipe:left workspace next

# manually bind ime toogle to detected in ~/.config/waybar/scripts/ime.fish
bindsym Ctrl+Space exec dbus-send --session --print-reply=literal --dest=org.fcitx.Fcitx5 /controller org.fcitx.Fcitx.Controller1.Toggle
bindsym $mod+m exec $powermenu

# Sink volume raise optionally with --device
bindsym XF86AudioRaiseVolume exec swayosd-client --output-volume raise
# Sink volume lower optionally with --device
bindsym XF86AudioLowerVolume exec  swayosd-client --output-volume lower
# Sink volume toggle mute
bindsym XF86AudioMute exec swayosd-client --output-volume mute-toggle
# Source volume toggle mute
bindsym XF86AudioMicMute exec swayosd-client --input-volume mute-toggle

# Brightness raise
bindsym XF86MonBrightnessUp exec swayosd-client --brightness raise
# Brightness lower
bindsym XF86MonBrightnessDown exec swayosd-client --brightness lower
bindsym $mod+t exec $term
bindsym $mod+n exec $code
bindsym $mod+Return exec $browser
bindsym $mod+q kill

# screen shot
bindsym Print exec grim "$(xdg-user-dir PICTURES)/Screenshots/Screenshot_$(date +%Y%m%d_%H%M%S).png"; exec notify-send "Screen shot saved" "Screenshots/$(date +%Y%m%d_%H%M%S).png"
bindsym $mod+p exec ~/.config/sway/scripts/screenshot-window.fish

bindsym $mod+Shift+p exec grim -g "$(slurp)" "$(xdg-user-dir PICTURES)/Screenshots/Screenshot_$(date +%Y%m%d_%H%M%S).png"

# laucher
bindsym $mod+space exec $menu

# window focus indicator
default_border pixel 2
client.focused #4c566a #2e3440 #d8dee9 #4c566a #4c566a
client.unfocused #000000 #000000 #4c566a #000000 #000000
client.urgent #b48ead #2e3440 #d8dee9 #a3be8c #b48ead

for_window [app_id="zen-browser"] opacity 1; workspace 1;
for_window [app_id="Alacritty"] focus;
for_window [app_id="org.pwmt.zathura"] opacity 1;
for_window [app_id="wofi"] background none
for_window [app_id="xdg-desktop-portal-gtk"] floating enable

assign [app_id="zen-browser"] workspace 󰖟
assign [app_id="dev.zed.Zed"] workspace 󰅩
assign [app_id="Alacritty"] workspace 

for_window [app_id="zen-browser"] focus; opacity 0.96
for_window [app_id="dev.zed.Zed"] focus
for_window [app_id="Alacritty"] focus

floating_modifier $mod normal

# reload the configuration file
bindsym $mod+r reload

# exit sway (logs you out of your wayland session)
bindsym $mod+Shift+e exit
#
# Moving around:

# _move_ the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
# ditto, with arrow keys
#bindsym $mod+Shift+Left move left
#bindsym $mod+Shift+Down move down
#bindsym $mod+Shift+Up move up
#bindsym $mod+Shift+Right move right

bindsym $mod+1 workspace 󰖟
bindsym $mod+2 workspace 󰅩
bindsym $mod+3 workspace 
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 󰖟
bindsym $mod+Shift+2 move container to workspace 󰅩
bindsym $mod+Shift+3 move container to workspace 
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+s layout stacking
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen

bindsym $mod+l exec swaylock -i $lockbg --hide-keyboard-layout

bar {
    swaybar_command waybar
}

# config fcitx5

exec fcitx5
set $GTK_IM_MODULE fcitx
set $QT_IM_MODULE fcitx
set $XMODIFIERS @im=fcitx
set $INPUT_METHOD fcitx
set $SDL_IM_MODULE fcitx
set $GLFW_IM_MODULE fcitx
exec env GTK_IM_MODULE=$GTK_IM_MODULE QT_IM_MODULE=$QT_IM_MODULE XMODIFIERS=$XMODIFIERS INPUT_METHOD=$INPUT_METHOD SDL_IM_MODULE=$SDL_IM_MODULE GLFW_IM_MODULE=$GLFW_IM_MODULE

exec mako
# exec_always swayosd-server
exec swayidle -w \
         timeout 300 'swaylock --hide-keyboard-layout -f -c 000000 -i $lock_bg' \
         timeout 600 'swaymsg "output * power off"' \
         resume 'swaymsg "output * power on"' \
         after-resume 'swaymsg "output * enable"' \
         before-sleep 'swaylock --hide-keyboard-layout -f -c 000000 -i $lock_bg'

exec $browser

# exec wl-paste -p -w 'wl-copy'
exec_always wl-paste --watch cliphist store
bindsym $mod+Shift+v exec cliphist list | wofi -S dmenu | cliphist decode | wl-copy
